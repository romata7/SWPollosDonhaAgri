<%- include('header') %>

<div class="container">
    <div class="row">
        <div class="col-12 col-sm-12 col-md-5 col-lg-4 col-xl-3">
            <div class="card">
                <div class="card-header">
                    Por Fechas
                </div>
                <form action="/topventas/buscar" method="post">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="fechaInicio">Desde:</label>
                            <input type="date" class="form-control" name="fechaInicio" value="<%= f1 %>">
                        </div>
                        <div class="form-group">
                            <label for="fechaFin">Hasta:</label>
                            <input type="date" class="form-control" name="fechaFin" value="<%= f2 %>">
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-success btn-block">Buscar</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-7 col-lg-8 col-xl-9">
            <% if (topventas.length > 0) { %>
            <table class="table table-hover table-sm">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Producto</th>
                        <th>Unidades</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i = 0; i < topventas.length; i++) { %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= topventas[i].producto %></td>
                        <td><%= topventas[i].Unidades %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
            <% } %>
        </div>
    </div>
</div>


<%- include('footer') %>

<script>
    $("form").submit(() => {
        $("#hermitcrab").show();
        $("#contenido").hide();
    })
    $("a").click(() => {
        $("#hermitcrab").show();
        $("#contenido").hide();
    })
</script>